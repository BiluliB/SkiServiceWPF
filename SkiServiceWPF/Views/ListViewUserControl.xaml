<UserControl x:Class="SkiServiceWPF.Views.ListViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:SkiServiceWPF.Helpers">
    <UserControl.Resources>
        <helpers:WidthConverter x:Key="WidthConverter"/>
    </UserControl.Resources>

    <Grid>
        <ListView x:Name="MyListView" ItemsSource="{Binding Registrations}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Auftrags-Nr."
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.2}" 
                                    DisplayMemberBinding="{Binding RegistrationId}" />
                    <GridViewColumn Header="Nachname"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.15}" 
                                    DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Header="Vorname"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                            Converter={StaticResource WidthConverter}, ConverterParameter=0.15}" 
                                    DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Service"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.15}" 
                                    DisplayMemberBinding="{Binding Service}" />
                    <GridViewColumn Header="Enddatum"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.15}" 
                                    DisplayMemberBinding="{Binding PickupDate}" />
                    <GridViewColumn Header="Status"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.1}" 
                                    DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Header="Priorität"
                                    Width="{Binding ActualWidth, ElementName=MyListView, 
                                    Converter={StaticResource WidthConverter}, ConverterParameter=0.1}" 
                                    DisplayMemberBinding="{Binding Priority}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
