<UserControl x:Class="SkiServiceWPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <!-- Menüleiste -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Edit"/>
            <MenuItem Header="Delete"/>
            <MenuItem Header="Add"/>
            <MenuItem Header="Help"/>
        </Menu>

        <!-- Werkzeugleiste -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Edit"/>
            <Button Content="Delete"/>
            <Button Content="Add"/>
        </ToolBar>

        <!-- Hauptinhaltsbereich -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Baumansicht für Aufträge -->
            <TreeView Grid.Column="0">
                <TreeViewItem Header="Alle Aufträge" IsExpanded="True">
                    <TreeViewItem Header="Offene Aufträge" IsExpanded="True">
                        <!-- Fügen Sie hier die Kinder hinzu -->
                    </TreeViewItem>
                    <TreeViewItem Header="In Arbeit" IsExpanded="True">
                        <!-- Fügen Sie hier die Kinder hinzu -->
                    </TreeViewItem>
                    <TreeViewItem Header="Abgeschlossene Aufträge"/>
                </TreeViewItem>
            </TreeView>

            <!-- Bereich für die Auftragsdetails -->
            <Grid Grid.Column="1">
                <!-- Suchbereich -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox Width="100" Margin="5" />
                    <TextBox Width="100" Margin="5" />
                    <Button Content="Suchen" Margin="5"/>
                </StackPanel>

                <!-- Datengitter für die ausgewählten Aufträge -->
                <DataGrid Margin="0,40,0,0"/>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
